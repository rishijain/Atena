<div class="min-h-screen flex flex-col justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8"> <!-- Full height and centered content -->
  <div class="w-full space-y-8 bg-white p-10 rounded-lg shadow-md"> <!-- Container for the form -->
    <h1 class="font-bold text-3xl">New Category</h1>
    <!-- Updated heading style to left align -->
    <%= form_with model: @category, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-1/3 border-gray-300 rounded-md shadow-sm" %> <!-- Changed width to 1/3 for a smaller box -->
      </div>
      <div id="fields-container">
        <!-- Dynamic fields will be added here -->
      </div>
      <button type="button" id="add-field" class="mt-2 bg-black text-white px-4 py-2 rounded">Add Field</button>
      <div class="mt-4">
        <%= form.submit "Save Category", class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-400 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-300" %> <!-- Updated button style to blue -->
      </div>
    <% end %>
  </div>
</div>
<script>
  document.getElementById('add-field').addEventListener('click', function() {
    const container = document.getElementById('fields-container');
    const newField = document.createElement('div');
    newField.className = 'mt-2 flex items-center space-x-2'; // Flex container for alignment
    newField.innerHTML = `
      <input type="text" name="category[dynamic_fields][field_name][]" placeholder="Enter field name" class="block w-1/3 border-gray-300 rounded-md shadow-sm" />
      <select name="category[dynamic_fields][field_type][]" class="block w-1/3 border-gray-300 rounded-md shadow-sm">
        <option value="string">String</option>
        <option value="date">Date</option>
      </select>
    `;
    container.appendChild(newField);
  });
</script>
