<!-- app/views/rent_agreements/new.html.erb -->
<div class="bg-blue-100 min-h-screen p-6">
  <h1 class="text-2xl font-bold mb-4">New Rent Agreement</h1>

  <%= form_with(model: @rent_agreement, local: true, class: "bg-white p-6 rounded shadow-md") do |form| %>
    <% if @rent_agreement.errors.any? %>
      <div class="mb-4">
        <h2 class="text-red-500 font-bold">Please fix the following errors:</h2>
        <ul class="list-disc pl-5 text-red-600">
          <% @rent_agreement.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :from, class: "block text-gray-700" %>
      <%= form.datetime_select :from, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :to, class: "block text-gray-700" %>
      <%= form.datetime_select :to, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :address, class: "block text-gray-700" %>
      <%= form.text_field :address, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :owner_name, class: "block text-gray-700" %>
      <%= form.text_field :owner_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :owner_phone_number, class: "block text-gray-700" %>
      <%= form.text_field :owner_phone_number, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :rent_amount, class: "block text-gray-700" %>
      <%= form.number_field :rent_amount, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :deposit, class: "block text-gray-700" %>
      <%= form.number_field :deposit, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div style="padding-top: 10px; margin-left: 0px;" class="flex space-x-2"> 
      <%= form.submit "Save Rent Agreement", class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-400 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-300" %>
      <%= link_to 'Back', rent_agreements_path, class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-black bg-white hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300" %> <!-- Back button styled in black -->
    </div>
  <% end %>
</div>
