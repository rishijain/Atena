<div class="min-h-screen flex flex-col justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full space-y-8 bg-white p-10 rounded-lg shadow-md">
    <h1 class="font-bold text-3xl">Rent Agreement Form</h1>
    <%= form_with(model: @rent_agreement, local: true, html: { class: 'space-y-6' }) do |form| %>
      <% if @rent_agreement.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold"><%= pluralize(@rent_agreement.errors.count, "error") %> prohibited this rent agreement from being saved:</strong>
          <ul class="mt-2">
            <% @rent_agreement.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-4">
        <%= form.label :name, class: 'block text-gray-700' %>
        <%= form.text_field :name, class: 'mt-1 block w-1/3 border-gray-300 rounded-md shadow-sm' %>
      </div>
      <div class="mb-4">
        <%= form.label :from, class: 'block text-gray-700' %>
        <div class="flex space-x-2">
          <%= form.date_select :from, {}, { class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' } %>
        </div>
      </div>
      <div class="mb-4">
        <%= form.label :to, class: 'block text-gray-700' %>
        <div class="flex space-x-2">
          <%= form.date_select :to, {}, { class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' } %>
        </div>
      </div>
      <div class="mb-4">
        <%= form.label :address, class: 'block text-gray-700' %>
        <%= form.text_field :address, class: 'mt-1 block w-1/3 border-gray-300 rounded-md shadow-sm' %>
      </div>
      <div class="mb-4">
        <%= form.label :owner_name, class: 'block text-gray-700' %>
        <%= form.text_field :owner_name, class: 'mt-1 block w-1/3 border-gray-300 rounded-md shadow-sm' %>
      </div>
      <div class="mb-4">
        <%= form.label :owner_phone_number, class: 'block text-gray-700' %>
        <%= form.text_field :owner_phone_number, class: 'mt-1 block w-1/3 border-gray-300 rounded-md shadow-sm' %>
      </div>
      <div class="mb-4">
        <%= form.label :rent_amount, class: 'block text-gray-700' %>
        <%= form.number_field :rent_amount, class: 'mt-1 block w-1/3 border-gray-300 rounded-md shadow-sm' %>
      </div>
      <div class="mb-4">
        <%= form.label :deposit, class: 'block text-gray-700' %>
        <%= form.number_field :deposit, class: 'mt-1 block w-1/3 border-gray-300 rounded-md shadow-sm' %>
      </div>
      <div class="mb-4">
        <%= form.label :url, class: 'block text-gray-700' %>
        <%= form.text_field :url, class: 'mt-1 block w-1/3 border-gray-300 rounded-md shadow-sm' %>
      </div>
      <div class="mt-4">
        <%= form.submit 'Save Rent Agreement', class: 'px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-400 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-300' %>
      </div>
    <% end %>
  </div>
</div>